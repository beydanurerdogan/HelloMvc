@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<h3>Öğrenci Listesi - Tablo</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Öğrenci ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.OgrenciId</td>
                <td>@ogr.Ad</td>
                <td>@ogr.Soyad</td>
                <td>
                    <a href="/Ogrenci/OgrenciDetay/@ogr.OgrenciId">Detay</a> |
                    <a onclick="return confirm('Silmek istediğinizden emin misiniz?')" href="/Ogrenci/OgrenciSil/@ogr.OgrenciId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
